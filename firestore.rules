rules_version = '2';
  service cloud.firestore {
    match /databases/{database}/documents {
      function isSignedIn() {
        return request.auth != null;
      }

    function isMember(familyId) {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/families/$(familyId)/members/$(request.auth.uid));
    }

    function hasValidJoinToken(familyId) {
      return request.resource.data.joinToken ==
        get(/databases/$(database)/documents/families/$(familyId)).data.joinToken;
    }

    match /families/{familyId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isMember(familyId);

      match /members/{uid} {
        allow read: if isMember(familyId);
        allow create: if isSignedIn() && request.auth.uid == uid && hasValidJoinToken(familyId);
        allow update, delete: if request.auth.uid == uid;
      }

        match /events/{eventId} {
          allow read, write: if isMember(familyId);
        }

        match /sessions/{sessionId} {
          allow read, write: if isMember(familyId);
        }
      }

      match /users/{uid} {
        allow read, write: if isSignedIn() && request.auth.uid == uid;
      }
    }
  }
